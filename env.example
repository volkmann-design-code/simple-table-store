# Database
DATABASE_URL=postgresql://datastore:datastore_dev@localhost:54390/datastore

# Admin API
ADMIN_TOKEN=dev-admin-token-change-in-production

# Session
SESSION_SECRET=dev-session-secret-change-in-production

# Server
PORT=3000

# S3-compatible Object Storage
# 
# Local Development (MinIO via docker-compose):
# Start MinIO with: docker-compose up -d
# Access MinIO console at: http://localhost:9001 (minioadmin/minioadmin)
# Create bucket "datastore" via console before using file uploads
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_BUCKET=datastore
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
# Optional: Parent folder/path prefix inside the bucket (e.g., "datastore-app" or "apps/datastore")
# All files will be stored under this path prefix
S3_PATH_PREFIX=

# Production (Hetzner, AWS S3, etc.):
# S3_ENDPOINT=https://your-location.your-objectstorage.com
# S3_REGION=us-east-1
# S3_BUCKET=your-bucket-name
# S3_ACCESS_KEY_ID=your-key-id
# S3_SECRET_ACCESS_KEY=your-access-key

# File Cache
FILE_CACHE_MAX_MEMORY_BYTES=104857600
FILE_CACHE_TTL_MS=86400000

# Branding
# Optional: Custom logo URL (e.g., "https://example.com/logo.png")
# If not provided, the default database icon SVG will be used
LOGO_URL=
# Optional: Custom application title
# If not provided, defaults to "Datastore"
APP_TITLE=
