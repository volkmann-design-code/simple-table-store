# Copy to secrets.yaml and fill in values
# DO NOT commit secrets.yaml to git
apiVersion: v1
kind: Secret
metadata:
  name: datastore-app-secrets
  namespace: datastore-app
type: Opaque
stringData:
  database-url: "postgresql://user:password@postgres-rw.postgres.svc.cluster.local:5432/datastore"
  admin-token: "your-secure-admin-token-here"
  session-secret: "your-secure-session-secret-here"
  s3-endpoint: "https://your-location.your-objectstorage.com"
  s3-region: "us-east-1"
  s3-bucket: "your-bucket-name"
  s3-access-key-id: "your-key-id"
  s3-secret-access-key: "your-access-key"
  s3-path-prefix: "datastore-app"
