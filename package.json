{
	"name": "simple-table-store",
	"version": "0.1.15",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/volkmann-design/simple-table-store.git"
	},
	"contributors": [
		{
			"name": "Enzo Volkmann",
			"email": "enzo@volkmann.dev"
		}
	],
	"scripts": {
		"dev": "bun run scripts/dev.ts",
		"build": "bunx @tailwindcss/cli -i src/styles/input.css -o dist/styles.css --minify && bun build src/index.ts --outdir dist --target bun",
		"start": "bun run dist/index.js",
		"migrate": "bun run src/db/migrate.ts",
		"format": "bunx biome format --write .",
		"lint": "bunx biome lint .",
		"check": "bunx biome check --write .",
		"prepare": "lefthook install"
	},
	"dependencies": {
		"@aws-sdk/client-s3": "^3.700.0",
		"@hono/node-server": "^1.19.8",
		"hono": "^4.11.3",
		"lru-cache": "^11.0.1",
		"pg": "^8.16.3"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"@tailwindcss/cli": "^4.1.18",
		"@types/bun": "^1.3.5",
		"@types/pg": "^8.16.0",
		"autoprefixer": "^10.4.23",
		"lefthook": "2.0.15",
		"postcss": "^8.5.6",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3"
	}
}
